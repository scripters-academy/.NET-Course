@using WorkifyApp.Constants
@model WorkItem
<div class="container">
    <div class="d-flex justify-content-center">
        <div class="card w-50">
            <div class="card-header">
                Update Task : @Model.Title
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div class="form-group mb-3">
                        <label asp-for="Title" class="form-label">Title</label>
                        <input asp-for="Title" type="text" class="form-control" />
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Description" class="form-label">Description</label>
                        <input asp-for="Description" type="text" class="form-control" />
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Status" class="form-label">Status</label>
                        <select class="form-control" asp-for="Status">
                            <option value="@WorkItemStatus.ToDo">To Do</option>
                            <option value="@WorkItemStatus.InProgress">In Progress</option>
                            <option value="@WorkItemStatus.Done">Done</option>
                        </select>
                    </div>
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a class="btn btn-danger" asp-controller="WorkItem" asp-action="Index">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

